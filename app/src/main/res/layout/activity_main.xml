<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#212121"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">
            <TextView android:layout_width="match_parent"
                      android:textColor="@android:color/white"
                      android:text="Train Booking"
                      android:fontFamily="@font/caviardreams_bolditalic"
                      android:textSize="50dp"
                      android:gravity="center_horizontal"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="match_parent"
                      android:text="IRCTC Login"
                      android:textSize="20dp"
                      android:fontFamily="@font/caviar_dreams_bold"
                      android:textColor="@android:color/white"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="8dp"
                      android:layout_height="wrap_content"/>

            <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
                                                           android:layout_marginLeft="18dp"
                                                           android:textColorHint="@android:color/white"
                                                           android:hint="Username"
                                                           android:layout_marginRight="10dp"
                                                           android:layout_marginTop="8dp"
                                                           android:layout_height="wrap_content">

                <AutoCompleteTextView android:layout_width="match_parent"
                                      android:id="@+id/username"
                                      android:textColor="@android:color/white"
                                      android:layout_height="wrap_content"/>


            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
                                                           android:layout_marginLeft="18dp"
                                                           android:layout_marginRight="10dp"
                                                           android:textColorHint="@android:color/white"
                                                           android:hint="Password"
                                                           app:passwordToggleTint="@android:color/white"
                                                           app:passwordToggleEnabled="true"
                                                           android:layout_marginTop="8dp"
                                                           android:layout_height="wrap_content">

                <EditText android:layout_width="match_parent"
                          android:inputType="textPassword"
                          android:id="@+id/password"
                                      android:textColor="@android:color/white"
                                      android:layout_height="wrap_content"/>


            </android.support.design.widget.TextInputLayout>


            <TextView android:layout_width="match_parent"
                      android:text="Journey Details"
                      android:textColor="@android:color/white"
                      android:layout_marginTop="10dp"
                      android:textSize="20dp"
                      android:fontFamily="@font/caviar_dreams_bold"
                      android:layout_marginLeft="8dp"
                      android:layout_height="wrap_content"/>

            <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
                                                           android:layout_marginLeft="18dp"
                                                           android:textColorHint="@android:color/white"
                                                           android:hint="From"
                                                           android:layout_marginRight="10dp"
                                                           android:layout_marginTop="8dp"
                                                           android:layout_height="wrap_content">

                <AutoCompleteTextView android:layout_width="match_parent"
                                      android:id="@+id/from"
                                      android:textColor="@android:color/white"
                                      android:layout_height="wrap_content"/>


            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
                                                           android:layout_marginLeft="18dp"
                                                           android:layout_marginRight="10dp"
                                                           android:textColorHint="@android:color/white"
                                                           android:hint="To"
                                                           android:layout_marginTop="8dp"
                                                           android:layout_height="wrap_content">

                <EditText android:layout_width="match_parent"
                          android:inputType="text"
                          android:id="@+id/to"
                          android:textColor="@android:color/white"
                          android:layout_height="wrap_content"/>


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
                                                           android:layout_marginLeft="18dp"
                                                           android:layout_marginRight="10dp"
                                                           android:textColorHint="@android:color/white"
                                                           android:hint="Date"
                                                           android:layout_marginTop="8dp"
                                                           android:layout_height="wrap_content">

                <EditText android:layout_width="match_parent"
                          android:id="@+id/date"
                          android:inputType="text"
                          android:textColor="@android:color/white"
                          android:layout_height="wrap_content"/>


            </android.support.design.widget.TextInputLayout>\


            <TextView android:layout_width="match_parent"
                      android:text="Passenger Details"
                      android:textColor="@android:color/white"
                      android:layout_marginTop="10dp"
                      android:textSize="20dp"
                      android:fontFamily="@font/caviar_dreams_bold"
                      android:layout_marginLeft="8dp"
                      android:layout_height="wrap_content"/>

            <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
                                                           android:layout_marginLeft="18dp"
                                                           android:textColorHint="@android:color/white"
                                                           android:hint="Name"
                                                           android:layout_marginRight="10dp"
                                                           android:layout_marginTop="8dp"
                                                           android:layout_height="wrap_content">

                <AutoCompleteTextView android:layout_width="match_parent"
                                      android:id="@+id/name"
                                      android:textColor="@android:color/white"
                                      android:layout_height="wrap_content"/>


            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
                                                           android:layout_marginLeft="18dp"
                                                           android:layout_marginRight="10dp"
                                                           android:textColorHint="@android:color/white"
                                                           android:hint="Age"
                                                           android:layout_marginTop="8dp"
                                                           android:layout_height="wrap_content">

                <EditText android:layout_width="match_parent"
                          android:inputType="number"
                          android:id="@+id/age"
                          android:textColor="@android:color/white"
                          android:layout_height="wrap_content"/>


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
                                                           android:layout_marginLeft="18dp"
                                                           android:layout_marginRight="10dp"
                                                           android:textColorHint="@android:color/white"
                                                           android:hint="Contact No"
                                                           android:layout_marginTop="8dp"
                                                           android:layout_height="wrap_content">

                <EditText android:layout_width="match_parent"
                          android:id="@+id/contactNo"
                          android:inputType="number"
                          android:textColor="@android:color/white"
                          android:layout_height="wrap_content"/>


            </android.support.design.widget.TextInputLayout>


            <Button android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/book"
                    android:fontFamily="@font/caviar_dreams_bold"
                    android:textSize="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_gravity="center"
                    android:background="@android:color/white"
                    android:text="Book"
                    android:layout_marginRight="40dp"
                    android:layout_height="70dp"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>